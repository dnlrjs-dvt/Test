import os
import logging

# Set up logging
logging.basicConfig(level=logging.INFO, format='%(asctime)s - %(levelname)s - %(message)s')

# Load environment variables
SECRET_KEY = os.getenv('SECRET_KEY')

if SECRET_KEY is None:
    logging.error('Missing SECRET_KEY environment variable.')
    raise ValueError('Missing SECRET_KEY environment variable.')

# Input validation function
def validate_input(user_input):
    if not isinstance(user_input, str) or len(user_input) == 0:
        logging.error('Invalid input: must be non-empty string.')
        raise ValueError('Input must be a non-empty string.')
    return user_input

# Example function to use the above input validation
def process_user_input(user_input):
    validated_input = validate_input(user_input)
    logging.info('Processing input: %s', validated_input)
    # Implement further processing...

# Safe path handling function
def safe_path(file_path):
    if '..' in file_path:
        logging.error('Unsafe file path: %s', file_path)
        raise ValueError('Unsafe file path.')
    logging.info('Safe file path confirmed: %s', file_path)
    return file_path

# Error handling demonstration
try:
    process_user_input('Some user input')
    safe_path('safe_directory/file.txt')
except Exception as e:
    logging.exception('An error occurred: %s', e)
